  import java.util.*;
  public class Main{
        public static int fib(int n){
            if(n<=1){ 
                return n;
            }
            return n + fib(n-1);
        }
        
        public static void main(String[] args){
            Scanner in = new Scanner(System.in);
            int n = in.nextInt();
            
            System.out.println("fib of given n :" + fib(n));
            
        }
        
    }
